<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aiw.mobile.view.result.ResultActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Result"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivBack"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="@+id/ivBack" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <TextView
        android:id="@+id/tvYourPhoteResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Photo Result"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:textColor="@color/white7"
        app:layout_constraintStart_toStartOf="@+id/ivBack"
        app:layout_constraintTop_toBottomOf="@+id/ivBack" />

    <TextView
        android:id="@+id/tvYourSkinIsDiagnose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Your skin is diagnosed"
        android:layout_marginTop="16dp"
        android:textColor="@color/white7"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ivResultCamera"
        app:layout_constraintTop_toBottomOf="@+id/ivResultCamera" />

    <TextView
        android:id="@+id/tvResultDiagnose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Normal"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvYourSkinIsDiagnose"
        app:layout_constraintTop_toBottomOf="@+id/tvYourSkinIsDiagnose" />

    <TextView
        android:id="@+id/tvYourSkinDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Your Skin Details"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:textColor="@color/white7"
        app:layout_constraintStart_toStartOf="@+id/tvResultDiagnose"
        app:layout_constraintTop_toBottomOf="@+id/tvResultDiagnose" />

    <TextView
        android:id="@+id/tvResultDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lorem Ipsum"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvYourSkinDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvYourSkinDetail" />

    <TextView
        android:id="@+id/tvDrugRecomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Drug Recomendation"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="12sp"
        android:textColor="@color/white7"
        app:layout_constraintStart_toStartOf="@+id/tvResultDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvResultDetail" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDrugRecomendation"
        android:layout_width="358dp"
        android:layout_height="269dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/tvDrugRecomendation"
        app:layout_constraintTop_toBottomOf="@+id/tvDrugRecomendation" />

    <ImageView
        android:id="@+id/ivResultCamera"
        android:layout_width="350dp"
        android:layout_height="177dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvYourPhoteResult"
        app:layout_constraintTop_toBottomOf="@+id/tvYourPhoteResult"
        app:srcCompat="@drawable/result_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>